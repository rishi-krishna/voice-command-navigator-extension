{
  "manifest_version": 3,
  "name": "Voice Command Navigator",
  "description": "Control tabs, scroll, and click links with voice commands.",
  "version": "2.0.9",
  "action": {
    "default_title": "Voice Command Navigator",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "activeTab", "storage", "sessions"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
