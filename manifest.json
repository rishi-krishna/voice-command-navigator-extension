{
  "manifest_version": 3,
  "name": "Voice Command Navigator",
  "description": "Control tabs, scroll, and click links with voice commands.",
  "version": "1.0.0",
  "action": {
    "default_title": "Voice Command Navigator",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting", "activeTab", "storage", "audioCapture"]
}
